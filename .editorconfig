# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = false

[*.{html,js,css}]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[justfile]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[{LICENSE,*.min.js,*.min.css}]
trim_trailing_whitespace = false
insert_final_newline = false
